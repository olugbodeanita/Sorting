#include <iostream>

template<class T>

void bubbleSort(T data[], int n){
  //regular loop that iterates through arrays
  for(int i = 0; i < n - 1; i++){
    for(int j = 0; j < n - 1 - i; j++){
      //compares data with next data
      if(data[j] > data[j + 1]){
        swap(data[j], data[j + 1]);
      }
    }
  }
}

template<class T>
void swap(T& x, T& y){
  T temp = x;
  x = y;
  y = temp;
}

template<class T>
void print(T data, int n){
  for(int i = 0; i < n; i++){
    std::cout << data[i] << std::endl;
  }
}

int main(){
  int data[] = {4, 2, 1, 5, 3};
  
  int n = sizeof(data)/sizeof(data[0]);
  
  bubbleSort(data, n);
}
